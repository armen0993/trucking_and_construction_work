<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ml.truckingandconstructionwork.presentation.custom_view.toolbar.ToolbarStandard
        android:id="@+id/toolbar_otp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftItem="@drawable/ic_arrow_back_black"
        app:title="Verification" />

    <ImageView
        android:id="@+id/ic_enter_otp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/size_24"
        android:background="@drawable/ic_enter_otp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_otp"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/title_text_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_32"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/title_text_enter_otp"
        android:textColor="@color/ptGreen"
        android:textSize="@dimen/t_size_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_enter_otp" />

    <LinearLayout
        android:id="@+id/container_verification_code"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text_otp">


        <TextView
            android:id="@+id/text_input_code_one"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_edit_text_gray"
            android:gravity="center_vertical|center"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/ptGreen"
            android:textSize="24sp"
            tools:ignore="LabelFor,TextContrastCheck"
            tools:text="1" />

        <TextView
            android:id="@+id/text_input_code_two"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_edit_text_gray"
            android:gravity="center_vertical|center"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/ptGreen"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            tools:text="2" />

        <TextView
            android:id="@+id/text_input_code_three"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_edit_text_gray"
            android:gravity="center_vertical|center"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/ptGreen"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            tools:text="3" />

        <TextView
            android:id="@+id/text_input_code_four"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_edit_text_gray"
            android:gravity="center_vertical|center"
            android:maxLength="1"
            android:maxLines="1"
            android:textColor="@color/ptGreen"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            tools:text="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_verification_code_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/container_verification_code"
        app:layout_constraintEnd_toEndOf="@id/container_verification_code"
        app:layout_constraintStart_toStartOf="@id/container_verification_code"
        app:layout_constraintTop_toTopOf="@id/container_verification_code">


        <EditText
            android:id="@+id/edit_verification_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:importantForAutofill="no"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:visibility="visible"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <TextView
        android:id="@+id/description_text_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/description_verification_otp"
        app:layout_constraintEnd_toStartOf="@id/btn_resend_otp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/container_verification_code"
        app:layout_constraintTop_toBottomOf="@id/container_verification_code" />

    <TextView
        android:id="@+id/btn_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8"
        android:layout_marginTop="@dimen/size_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/btn_resend_otp"
        android:textAllCaps="true"
        android:textColor="@color/ptGreen"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/description_text_otp"
        app:layout_constraintBottom_toBottomOf="@id/description_text_otp"
        app:layout_constraintEnd_toEndOf="@id/container_verification_code"
        app:layout_constraintStart_toEndOf="@id/description_text_otp"
        app:layout_constraintTop_toTopOf="@id/description_text_otp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/size_24"
        android:layout_marginTop="@dimen/size_24"
        android:layout_marginBottom="@dimen/size_16"
        android:background="@drawable/bg_button_selector"
        android:text="@string/text_btn_verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/t_size_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_text_otp"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>