<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp"
    android:background="@drawable/drawable_rect_white"
    android:minWidth="320dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_equipment"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_margin="@dimen/size_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_empty" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/equipment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_equipment"
        tools:text="@string/trucks"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/brand"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equipment_type"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/brand_text"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:textStyle="normal"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/brand"
        app:layout_constraintTop_toTopOf="@id/brand"
        tools:text="@string/brand"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/model"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brand"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/model_text"
        android:layout_width="@dimen/size_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:textStyle="normal"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/model"
        app:layout_constraintTop_toTopOf="@id/model"
        tools:text="@string/model"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/weight_car"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/model"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/weight"
        app:layout_constraintTop_toTopOf="@id/weight"
        tools:text="2000kg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/load_capacity"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weight"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/capacity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/capacity"
        app:layout_constraintTop_toTopOf="@id/capacity"
        tools:text="6000kg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/length_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/length_of_arrow"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/capacity"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/length_arrow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/length_arrow"
        app:layout_constraintTop_toTopOf="@id/length_arrow"

        tools:text="25m"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/production_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        android:text="@string/production_year"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/length_arrow"
        android:layout_marginTop="@dimen/size_15"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/production_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_size_16"
        android:layout_marginHorizontal="@dimen/size_15"
        app:layout_constraintStart_toEndOf="@id/production_year"
        app:layout_constraintTop_toTopOf="@id/production_year"
        tools:text="2010"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/production_year">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="@string/close"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/ptRed"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>