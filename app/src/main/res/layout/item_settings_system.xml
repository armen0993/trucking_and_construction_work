<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size_15"
    android:background="@drawable/bg_item_settings">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/size_15"
            android:drawableStart="@drawable/ic_language_small"
            android:text="@string/language"
            android:drawablePadding = "@dimen/size_10"
            android:textSize="@dimen/t_size_18"
            android:paddingEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/ptGray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="4dp"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_notifications_small"
            android:paddingStart="@dimen/size_15"
            android:text="@string/notifications"
            android:drawablePadding = "@dimen/size_10"
            android:paddingEnd="60dp"
            android:textSize="@dimen/t_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language"
            tools:ignore="RtlSymmetry" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/notification"
            app:layout_constraintEnd_toEndOf="@id/notification"
            app:layout_constraintTop_toTopOf="@id/notification"
            tools:ignore="RtlSymmetry" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/ptGray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fingerprint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_touch_small"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/size_15"
            android:text="@string/log_in_with_fingerprint"
            android:drawablePadding = "@dimen/size_10"
            android:textSize="@dimen/t_size_18"
            android:paddingEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/fingerprint_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/fingerprint"
            app:layout_constraintEnd_toEndOf="@id/fingerprint"
            app:layout_constraintTop_toTopOf="@id/fingerprint"
            tools:ignore="RtlSymmetry" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/ptGray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fingerprint"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_help_small"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/size_15"
            android:text="@string/help"
            android:paddingEnd="60dp"
            android:drawablePadding = "@dimen/size_10"
            android:textSize="@dimen/t_size_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line3"
            tools:ignore="RtlSymmetry" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
