<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_15"
    android:background="@drawable/bg_item_settings">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/special_equipment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:paddingStart="@dimen/size_15"
            android:gravity="center_vertical"
            android:text="@string/my_special_equipments"
            android:drawableEnd="@drawable/ic_next_gray"
            android:background="?selectableItemBackground"
            android:textSize="@dimen/t_size_18"
            android:singleLine="true"
            android:ellipsize="end"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/ptGray3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_offers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:paddingStart="@dimen/size_15"
            android:gravity="center_vertical"
            android:text="@string/my_statements"
            android:drawableEnd="@drawable/ic_next_gray"
            android:background="?selectableItemBackground"
            android:textSize="@dimen/t_size_18"
            android:singleLine="true"
            android:ellipsize="end"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/ptGray3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:paddingStart="@dimen/size_15"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_next_gray"
            android:background="?selectableItemBackground"
            android:text="@string/preferred_announcements"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/t_size_18"
            tools:ignore="RtlSymmetry" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
