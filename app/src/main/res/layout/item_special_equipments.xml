<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/size_15"
    android:layout_marginVertical="@dimen/size_5">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:background="@drawable/bg_list_offers_item_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_equipment"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_margin="@dimen/size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_empty" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/equipment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/icon_equipment"
            app:layout_constraintTop_toTopOf="@id/icon_equipment"
            tools:text="@string/trucks"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/brand"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:textStyle="normal"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/icon_equipment"
            app:layout_constraintBottom_toBottomOf="@id/icon_equipment"
            tools:text="@string/brand"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/model"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:textStyle="normal"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/brand"
            app:layout_constraintBottom_toBottomOf="@id/icon_equipment"
            tools:text="@string/model"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_favorite"
            android:layout_width="@dimen/size_32"
            android:layout_height="@dimen/size_32"
            android:background="@drawable/ic_favorite_selector"
            android:layout_marginEnd="@dimen/size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:background="@drawable/bg_list_offers_item_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_container">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            android:text="@string/weight_car"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/size_15"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/weight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/weight"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/size_15"
            tools:text="2000kg"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            android:text="@string/load_capacity"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weight"
            android:layout_marginTop="@dimen/size_15"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/capacity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/capacity"
            app:layout_constraintTop_toBottomOf="@id/weight"
            android:layout_marginTop="@dimen/size_15"
            tools:text="6000kg"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/length_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            android:text="@string/length_of_arrow"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/capacity"
            android:layout_marginTop="@dimen/size_15"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/length_arrow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/length_arrow"
            app:layout_constraintTop_toBottomOf="@id/capacity"
            android:layout_marginTop="@dimen/size_15"
            tools:text="25m"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/production_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            android:text="@string/production_year"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/length_arrow"
            android:layout_marginTop="@dimen/size_15"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/production_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_size_16"
            android:layout_marginHorizontal="@dimen/size_15"
            app:layout_constraintStart_toEndOf="@id/production_year"
            app:layout_constraintTop_toBottomOf="@id/length_arrow"
            android:layout_marginTop="@dimen/size_15"
            tools:text="2010"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_32"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_24"
            android:background="@drawable/bg_button_order"
            android:text="@string/see_more"
            android:paddingVertical="@dimen/size_5"
            android:paddingHorizontal="@dimen/size_10"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/t_size_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/production_year" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>