<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">

        <argument
            android:name="sign_in_type"
            app:argType="string"
            android:defaultValue=""
            />

        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_signInFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/addWorkFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.add_work.AddWorkFragment"
        android:label="fragment_add_work"
        tools:layout="@layout/fragment_add_work" >
        <action
            android:id="@+id/action_addWorkFragment_to_addJobOfferFragment"
            app:destination="@id/addJobOfferFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.forgot_password.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/personalDetailsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.registration.personal_details.PersonalDetailsFragment"
        android:label="fragment_personal_details"
        tools:layout="@layout/fragment_personal_details">
        <argument
            android:name="user_type"
            app:argType="string" />
        <argument
            android:name="user_id"
            app:argType="string" />
        <action
            android:id="@+id/action_personalDetailsFragment_to_createPinFragment"
            app:destination="@id/createPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_personalDetailsFragment_to_createFingerprintFragment"
            app:destination="@id/createFingerprintFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_personalDetailsFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/checkerFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.registration.checker_client_or_driver.CheckerFragment"
        android:label="fragment_checker"
        tools:layout="@layout/fragment_checker">


        <action
            android:id="@+id/action_checkerFragment_to_personalDetailsFragment"
            app:destination="@id/personalDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="user_id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_createLoginPasswordFragment_to_checkerFragment"
            app:destination="@id/checkerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/createPinFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.registration.create_pin.CreatePinFragment"
        android:label="fragment_create_pin"
        tools:layout="@layout/fragment_create_pin">
        <action
            android:id="@+id/action_createPinFragment_to_createFingerprintFragment"
            app:destination="@id/createFingerprintFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/createFingerprintFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.registration.fingerprint.CreateFingerprintFragment"
        android:label="fragment_create_fingerprint"
        tools:layout="@layout/fragment_create_fingerprint">
        <action
            android:id="@+id/action_createFingerprintFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >

        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
        <action
            android:id="@+id/action_profileFragment_to_addSpecialEquipmentFragment"
            app:destination="@id/specialEquipmentsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_profileFragment_to_userOffersFragment"
            app:destination="@id/userOffersFragment" />
    </fragment>

    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.verification_forgot_password.VerificationForgotPasswordFragment"
        android:label="OtpFragment"
        tools:layout="@layout/fragment_verification_forgot_password">
        <action
            android:id="@+id/action_verificationFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/verificationFragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.new_password.NewPasswordFragment"
        android:label="NewPasswordFragment"
        tools:layout="@layout/fragment_new_password" />

    <fragment
        android:id="@+id/addJobOfferFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.add_work.add_offer.AddJobOfferFragment"
        android:label="fragment_add_job_offer"
        tools:layout="@layout/fragment_add_job_offer" >
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
    </fragment>

    <fragment
        android:id="@+id/offersListFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.offers.OffersListFragment"
        android:label="fragment_offers_list"
        tools:layout="@layout/fragment_offers_list" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
        <action
            android:id="@+id/action_mainFragment_to_sectionsFragment"
            app:destination="@id/sectionsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_specialEquipmentsListFragment"
            app:destination="@id/specialEquipmentsListFragment" />

    </fragment>
    <fragment
        android:id="@+id/sectionsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.main.sections.SectionsFragment"
        android:label="fragment_sections"
        tools:layout="@layout/fragment_sections" >
        <action
            android:id="@+id/action_sectionsFragment_to_specialEquipmentsListFragment"
            app:destination="@id/specialEquipmentsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.settings.edit_profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.settings.change_password.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" >
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
    </fragment>
    <fragment
        android:id="@+id/specialEquipmentsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.profile.special_equipments.SpecialEquipmentsFragment"
        android:label="fragment_special_equipments"
        tools:layout="@layout/fragment_special_equipments" >
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
        <action
            android:id="@+id/action_specialEquipmentsFragment_to_addSpecialEquipmentFragment"
            app:destination="@id/addSpecialEquipmentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/addSpecialEquipmentFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.profile.special_equipments.add_special_equipment.AddSpecialEquipmentFragment"
        android:label="fragment_add_special_equipment"
        tools:layout="@layout/fragment_add_special_equipment">
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />
    </fragment>
    <fragment
        android:id="@+id/specialEquipmentsListFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.main.all_sections.SpecialEquipmentsListFragment"
        android:label="fragment_special_equipments_list"
        tools:layout="@layout/fragment_special_equipments_list" >
        <argument
            android:name="equipment_type"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/userOffersFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.profile.offers.UserOffersFragment"
        android:label="fragment_user_offers"
        tools:layout="@layout/fragment_user_offers">
        <argument
            android:name="user_id"
            app:argType="string"
            android:defaultValue=""
            />

    </fragment>
</navigation>