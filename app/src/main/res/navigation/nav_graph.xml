<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/jobOfferFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.MainFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_checkerFragment"
            app:destination="@id/checkerFragment" />

        <action
            android:id="@+id/action_mainFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/constructionWorksFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.special_equipment.SpecialEquipmentFragment"
        android:label="fragment_construction_works"
        tools:layout="@layout/fragment_special_equipment" />
    <fragment
        android:id="@+id/trucksFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.trucks.TrucksFragment"
        android:label="TrucksFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.forgot_password.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_verificationFragment"
            app:destination="@id/verificationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/personalDetailsFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.registration.personal_details.PersonalDetailsFragment"
        android:label="fragment_personal_details"
        tools:layout="@layout/fragment_personal_details">
        <argument
            android:name="user_type"
            app:argType="string" />
        <action
            android:id="@+id/action_personalDetailsFragment_to_createLoginPasswordFragment"
            app:destination="@id/createLoginPasswordFragment" />

    </fragment>
    <fragment
        android:id="@+id/checkerFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.registration.checker_client_or_driver.CheckerFragment"
        android:label="fragment_checker"
        tools:layout="@layout/fragment_checker">
        <action
            android:id="@+id/action_checkerFragment_to_registrationFragment"
            app:destination="@id/personalDetailsFragment" />


    </fragment>
    <fragment
        android:id="@+id/createLoginPasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.registration.create_login_password.CreateLoginPasswordFragment"
        android:label="fragment_create_login_password"
        tools:layout="@layout/fragment_create_login_password">
        <argument
            android:name="userId"
            app:argType="integer" />
        <action
            android:id="@+id/action_createLoginPasswordFragment_to_createPinFragment"
            app:destination="@id/createPinFragment" />
        <action
            android:id="@+id/action_createLoginPasswordFragment_to_createFingerprintFragment"
            app:destination="@id/createFingerprintFragment" />
        <action
            android:id="@+id/action_createLoginPasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createPinFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.registration.create_pin.CreatePinFragment"
        android:label="fragment_create_pin"
        tools:layout="@layout/fragment_create_pin">
        <action
            android:id="@+id/action_createPinFragment_to_createFingerprintFragment"
            app:destination="@id/createFingerprintFragment" />
    </fragment>
    <fragment
        android:id="@+id/createFingerprintFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.registration.fingerprint.CreateFingerprintFragment"
        android:label="fragment_create_fingerprint"
        tools:layout="@layout/fragment_create_fingerprint">
        <action
            android:id="@+id/action_createFingerprintFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.main.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.verification_forgot_password.VerificationForgotPasswordFragment"
        android:label="OtpFragment"
        tools:layout="@layout/fragment_verification_forgot_password">
        <action
            android:id="@+id/action_verificationFragment_to_newPasswordFragment"
            app:destination="@id/newPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/verificationFragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/newPasswordFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.sign_in.forgot_password.new_password.NewPasswordFragment"
        android:label="NewPasswordFragment"
        tools:layout="@layout/fragment_new_password" />

    <fragment
        android:id="@+id/jobOfferFragment"
        tools:layout="@layout/fragment_job_offer"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.job_offer.JobOfferFragment"
        android:label="SpecialOfferFragment" >
        <action
            android:id="@+id/action_jobOfferFragment_to_addJobOfferFragment"
            app:destination="@id/addJobOfferFragment" />
        <action
            android:id="@+id/action_jobOfferFragment_to_offersListFragment"
            app:destination="@id/offersListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addJobOfferFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.job_offer.add_offer.AddJobOfferFragment"
        android:label="fragment_add_job_offer"
        tools:layout="@layout/fragment_add_job_offer" >

        <action
            android:id="@+id/action_addJobOfferFragment_to_offersListFragment"
            app:destination="@id/offersListFragment"

       />
    </fragment>

    <fragment
        android:id="@+id/offersListFragment"
        android:name="com.ml.truckingandconstructionwork.presentation.ui.job_offer.offers_list.OffersListFragment"
        android:label="fragment_offers_list"
        tools:layout="@layout/fragment_offers_list" />
</navigation>